<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".Price">

    <TextView
        android:id="@+id/WallSize"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        android:paddingLeft="10dp"
        android:layout_marginBottom="20dp"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/Materials"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@id/WallSize"
        android:text="Material"
        android:textColor="@color/white"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/Labour"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@id/Materials"
        android:text="Labour"
        android:textColor="@color/white"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/Large"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_below="@+id/WallSize"
        android:layout_marginBottom="20dp"
        android:textColor="@color/white"
        android:paddingLeft="10dp"
        android:text="Large Frame"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/Med1"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_below="@+id/Large"
        android:layout_marginBottom="10dp"
        android:textColor="@color/white"
        android:paddingLeft="10dp"
        android:text="Medium Frame"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/Med2"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_below="@+id/Med1"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:paddingLeft="10dp"
        android:layout_marginBottom="10dp"
        android:text="Medium Frame"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/Med3"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_below="@+id/Med2"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/white"
        android:text="Medium Frame"
        android:textSize="20dp" />

    <TextView

        android:id="@+id/Small"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_below="@+id/Med3"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        android:paddingLeft="10dp"
        android:text="Small Frame"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/LRGM"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="80dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/Materials"
        android:layout_toRightOf="@id/Large"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/Med1M"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="80dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/LRGM"
        android:textColor="@color/white"
        android:layout_toRightOf="@id/Med1"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/Med2M"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="80dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/Med1M"
        android:textColor="@color/white"
        android:layout_toRightOf="@id/Med2"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/Med3M"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="80dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/white"
        android:layout_below="@id/Med2M"
        android:layout_toRightOf="@id/Med3"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/SmallM"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="80dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/Med3M"
        android:textColor="@color/white"
        android:layout_toRightOf="@id/Small"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/LRGL"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/white"
        android:layout_toRightOf="@id/LRGM"
        android:layout_below="@id/Labour"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/Med1L"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/white"
        android:layout_toRightOf="@id/Med1M"
        android:layout_below="@id/LRGL"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/Med2L"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@id/Med2M"
        android:textColor="@color/white"
        android:layout_below="@id/Med1L"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/Med3L"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@id/Med3M"
        android:textColor="@color/white"
        android:layout_below="@id/Med2L"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/SmallL"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/white"
        android:layout_toRightOf="@id/SmallM"
        android:layout_below="@id/Med3L"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/Total"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_below="@id/Small"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"
        android:textSize="20dp" />

    <androidx.appcompat.widget.AppCompatButton
    android:id="@+id/Pay"
        android:layout_width="250dp"
        android:layout_height="63dp"
        android:layout_below="@id/Total"
        android:textColor="@color/white"
        android:background="@color/black"
        android:layout_marginTop="25dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="Pay" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Home"
        android:layout_width="250dp"
        android:layout_height="63dp"
        android:layout_below="@id/Pay"
        android:layout_marginTop="25dp"
        android:background="@color/black"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="Return to home page"
        android:textColor="@color/white" />


</RelativeLayout>